#!/bin/bash

self_path="$(readlink -f ${0})"
self_dir="${self_path%/*}/.."
cd "${self_dir}"

role="${1}"
shift 1

time ansible-playbook ./playbooks/deploy.yml -e target_hosts="${role}" -e target_roles="${role}" --syntax-check "${@}"
time ansible-playbook ./playbooks/deploy.yml -e target_hosts="${role}" -e target_roles="${role}" --list-tasks "${@}"
#time ansible-playbook ./playbooks/deploy.yml -e target_hosts="${role}" -e target_roles="${role}" -C "${@}"
